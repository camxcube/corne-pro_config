/ {
    // macros
    macros {
        mac_screen_sleep: mac_screen_sleep {
            label = "Put mac screen to sleep";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <10>;
            bindings = <&kp LCTRL &kp LSHIFT &kp C_EJECT>;

        };

        macro_caps: macro_caps {
            label = "Capslock";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <10>;
            bindings
                    = <&macro_press &kp CAPS>
                    , <&macro_wait_time 1500>
                    , <&macro_release &kp CAPS>
                    ;
        };

        MINIMIZE: MINIMIZE {
            label = "Minimize windows for Windows";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <10>;
            bindings
                    = <&macro_press &kp LALT>
                    , <&kp SPACE>
                    , <&macro_release &kp LALT>
                    , <&macro_wait_time 50>
                    , <&kp N>
                    ;
        };


    };
};
